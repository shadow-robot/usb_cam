<launch>
  <arg name="viewer" default="false" />
  <arg name="finger" default="0" />
  <arg name="device" default="/dev/v4l/by-id/usb-Shadow_Robot_Co._Distal_sensor_$(arg finger)_50fps-video-index0" />
  <arg name="respawn" default="false"/>
  <arg name="fps" default="50"/>

  <node ns="/dx_finger/F$(arg finger)/tactiles" name="distal" pkg="usb_cam" type="usb_cam_node" output="screen" respawn="$(arg respawn)">
    <param name="video_device" value="$(arg device)"/>
    <param name="image_width" value="1280" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuvmono10" />
    <param name="camera_frame_id" value="F$(arg finger)_distal" />
    <param name="io_method" value="mmap"/>
    <param name="framerate" value="$(arg fps)"/>
  </node>

  <include if="$(arg viewer)" file="$(find usb_cam)/launch/view.launch">
    <arg name="finger" value="$(arg finger)"/>
  </include>

</launch>
